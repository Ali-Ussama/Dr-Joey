<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.aliosama.sillynamemaker.Activities.Personality.PersonalityTestResultActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

                    <View
                        android:layout_width="200dp"
                        android:layout_height="12dp"
                        android:background="@color/light_transparent"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"/>
                    <View
                        android:layout_width="100dp"
                        android:layout_height="12dp"
                        android:background="@color/light_transparent"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"/>

                    <View
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@color/light_transparent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:src="@color/com_facebook_button_background_color_disabled"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/light_transparent"
                android:layout_gravity="center_horizontal"
                android:gravity="center" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">


                <View
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:background="@color/light_transparent" />

                <View
                    android:layout_width="350dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/light_transparent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/personality_test_result_percentage_left_background">

                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:padding="5dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/personality_test_result_percentage_textview_background" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@color/light_transparent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:background="@drawable/personality_test_result_percentage_right_background">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:layout_marginEnd="45dp"
                                android:layout_centerVertical="true">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@color/light_transparent" />
                            </LinearLayout>


                            <View
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="5dp"
                                android:padding="5dp"
                                android:background="@drawable/personality_test_result_percentage_textview_background" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">


                <View
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:background="@color/light_transparent" />

                <View
                    android:layout_width="350dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/light_transparent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/personality_test_result_percentage_left_background">

                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:padding="5dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/personality_test_result_percentage_textview_background" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:background="@color/light_transparent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:background="@drawable/personality_test_result_percentage_right_background">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:layout_marginEnd="45dp"
                                android:layout_centerVertical="true">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:background="@color/light_transparent" />
                            </LinearLayout>


                            <View
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:layout_gravity="end|center_vertical"
                                android:layout_marginEnd="5dp"
                                android:padding="5dp"
                                android:background="@drawable/personality_test_result_percentage_textview_background" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/light_transparent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:text="@string/Talk_to_Dr_Joey"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
