<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/FPTRVRI_Character_ImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/isfp"/>


    <TextView
        android:id="@+id/FPTRVRI_Character_Title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="LOGICIAN"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/FPTRVRI_Character_Acronym"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="(INTP, -A/-T)"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/FPTRVRI_Character_MinDescription"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Imaginative and strategic thinkers, with a plan for everything."
        android:textSize="12sp"/>
</LinearLayout>