<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:id="@+id/activity_personality_type"
    tools:context="com.example.aliosama.sillynamemaker.Activities.PersonalityType.PersonalityTypeItemActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_personality_type_item_headerImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@color/light_transparent" />

        <TextView
            android:id="@+id/activity_personality_type_item_Header1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_personality_type_item_Description1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/activity_personality_type_item_MidImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@color/light_transparent" />

        <TextView
            android:id="@+id/activity_personality_type_item_Header2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:gravity="center"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_personality_type_item_Description2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:textSize="17sp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_transparent"/>
        <TextView
            android:id="@+id/activity_personality_type_item_YouMayKnowText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/you_may_know"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_personality_type_item_YouMayKnow_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
</ScrollView>
